<form id="new_tweet">
  <div id="user_container"></div>

  <label for="new_tweet_message">Message: </label>
  <% if @message: %>
    <textarea name="message" id="new_tweet_message">
      <%= @message %>
    </textarea>
  <% else: %>
    <textarea name="message" id="new_tweet_message" placeholder="blah blah blah, I'm so interesting..." />
  <% end %>

<a href="#" id="save_tweet">Save Tweet</a>
</form>

